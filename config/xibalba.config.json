{
  "xibalba": {
    "version": "1.0.0",
    "mcp": {
      "enabled": true,
      "serverUrl": "http://localhost:8000",
      "endpoint": "/api/v1/chat/completions",
      "timeout": 30000
    },
    "ai": {
      "model": "xibalba-local",
      "temperature": 0.7,
      "maxTokens": 4096
    },
    "localStorage": {
      "configKey": "xibalba_config",
      "autoSave": true
    }
  },
  "installation": {
    "portable": true,
    "usbReady": true,
    "requiresInternet": false,
    "localAIOnly": true,
    "cutTheCord": true,
    "offlineMode": true,
    "standaloneMode": true
  }
}

