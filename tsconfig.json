{
  "compilerOptions": {
    "target": "ES2022",
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "module": "ESNext",
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ],
    "skipLibCheck": true,
    "types": [
      "node"
    ],
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "moduleDetection": "force",
    "allowJs": true,
    "jsx": "react-jsx",
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "allowImportingTsExtensions": true,
    "noEmit": true,
    // TypeScript Strict Mode - Best Practice Enforcement
    // RELAXED for Phase 2 (pragmatic approach) - TODO: Re-enable incrementally
    "strict": true,
    "noImplicitAny": false, // Relaxed: Allow implicit any temporarily
    "strictNullChecks": true, // Keep: Important for safety
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": false, // Relaxed: Allow uninitialized properties
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": false, // Relaxed: Allow unused locals
    "noUnusedParameters": false, // Relaxed: Allow unused parameters
    "noImplicitReturns": false, // Relaxed: Allow implicit returns
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": false, // Relaxed: Allow unchecked indexed access
    "noImplicitOverride": false // Relaxed: Allow implicit override
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build"
  ]
}